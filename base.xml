<theme>

    <formatVersion>3</formatVersion>
	<!-------system screen------->		
	<view name="system">
	<!-------system wheel------->	
			<carousel name="systemcarousel">
				<type>vertical_wheel</type>
				<pos>0 0</pos>
				<size>1 1</size>
				<origin>0 0</origin>
				<color>FFFFFF00</color>
				<logoScale>1.1</logoScale>
				<logoSize>0.2 0.2</logoSize>
				<logoRotation>-6.5</logoRotation>
				<logoRotationOrigin>3.5 .5</logoRotationOrigin>
				<logoAlignment>right</logoAlignment>
				<maxLogoCount>7</maxLogoCount>
				<zIndex>75</zIndex>
			</carousel>
<!-------games aviliable ------->
		<text name="systemInfo">
			<backgroundColor>00000000</backgroundColor>
			<color>ffffff</color>
			<fontPath>./art/Exo2-Bold.ttf</fontPath>
			<fontSize>0.0592592592592593</fontSize>
		</text>	
      	   <!-------system description ------->
         <text name="system_description" extra="true">
            <pos>0.500 0.730</pos>
            <color>ffffff</color>
            <fontPath>./art/Exo2-Bold.ttf</fontPath>
            <fontSize>0.025</fontSize>
            <size>0.250 0.330</size>
            <alignment>left</alignment>
            <lineSpacing>1.0</lineSpacing>
            <zIndex>42</zIndex>
		  </text>
	
		<helpsystem name="help">
			<pos>2 2</pos>
			<textColor>000000</textColor>
			<iconColor>000000</iconColor>
			<fontPath>./art/TinyUnicode.ttf</fontPath>
			<fontSize>0.06666666666666</fontSize>
		</helpsystem>	

		<image name="background" extra="true">

		</image>
<!-------path for your logos ------->
		<image name="logo">
			<path>./art/icons${region}/${system.theme}.png</path>
		</image>
						
		
	</view>

	
	

    <view name="video">
		
		<video name="md_video">
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<delay>0</delay>			
		</video>
		
		<image name="md_marquee">
			 <zIndex>42</zIndex>
		</image>

	</view>	

	
	
